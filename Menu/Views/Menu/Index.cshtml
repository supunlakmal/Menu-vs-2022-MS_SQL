@model List<Menu.Models.Dish>
@{
	ViewData["Title"] = "MenuIndex";
}

<div class="containre">
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-6">
				<div class="d-flex justify-content-center">
					<h2>@item.Name</h2>
					</div>
				<div class="d-flex justify-content-center">
					<img src="@item.ImageUrl" alt="@item.Name" />
					</div>

				<div class="d-flex justify-content-center">
					<h2>@item.Price.ToString("N2") Dollars</h2>
				</div>	
				<div class="d-flex justify-content-center">
					<a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View </a>
				</div>
				</div>
		
		}

	</div>

	</div>
