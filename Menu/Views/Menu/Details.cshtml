@model Menu.Models.Dish
@{
	ViewData["Title"] = "Deatails";
}

<div class="container">
	<div class="d-flex justify-content-center">
		<h2>@Model.Name</h2>
	</div>
	<div class="d-flex justify-content-center">
		<img src="@Model.ImageUrl" alt="@Model.Name" style="width: 50%" />
	</div>

	<div class="d-flex justify-content-center">
		<h2>@Model.Price.ToString("N2") Dollars</h2>
	</div>

	<div class="d-flex justify-content-center">
		Ingredients:
		<ul>
			@foreach (var item in Model.DishIngredients)
			{
				<li>@item.Ingredient.Name</li>
			}
		</ul>
	</div>
	<div class="d-flex justify-content-center">
		<a class="btn btn-info" asp-action="Index">Back to the menu</a>
	</div>
</div>


